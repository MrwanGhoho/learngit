<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/haha">


<FrameLayout
    android:id="@+id/frame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="560sp"
        android:background="@mipmap/tig"
        android:id="@+id/imageView2"
         />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="@mipmap/muchwhite"
        android:layout_gravity="center"/>

    <TextView
        android:text="@string/text"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#04c655"
        android:id="@+id/textView3"
        android:layout_marginTop="100dp"
       android:layout_gravity="center_horizontal" />

</FrameLayout>


    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name2"
        android:textSize="15sp"
        android:layout_centerInParent="true"  />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        android:textSize="15sp"
        android:id="@+id/editText4"
        android:layout_marginTop="102dp"
        android:textColor="#c6c5c5"
        android:layout_above="@+id/editText3"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:textSize="15sp"
        android:background="#f1f7f0"
        android:textColor="#17af54"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/editText3"
         />

</RelativeLayout>